<?xml version="1.0"?>
<robot name="cubli_1axis">

  <material name="gray">
    <color rgba="0.8 0.8 0.8 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.15 0.15 0.15"/>
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.15 0.15 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.00375" ixy="0.0" ixz="0.0" 
               iyy="0.00375" iyz="0.0" 
               izz="0.00375"/>
    </inertial>
  </link>

  <link name="wheel_link">
    <visual>
      <geometry>
        <cylinder radius="0.04" length="0.01"/>
      </geometry>
      <material name="red"/>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.04" length="0.01"/>
      </geometry>
      <origin rpy="0 1.5708 0" xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" 
               iyy="0.0001" iyz="0.0" 
               izz="0.0001"/>
    </inertial>
  </link>

  <link name="marker_link">
    <visual>
      <geometry>
        <box size="0.012 0.01 0.005"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
    </inertial>
  </link>

  <joint name="motor_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_link"/>
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="marker_fix" type="fixed">
    <parent link="wheel_link"/>
    <child link="marker_link"/>
    <origin xyz="0.006 0.025 0" rpy="0 0 0"/>
  </joint>

</robot>